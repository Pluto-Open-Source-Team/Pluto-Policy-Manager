{
	"name": "pluto-policy-manager",
	"version": "2.0.0-dev",
	"description": "Chrome enterprise policy management tool",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.31.1",
		"@smui/button": "^7.0.0-beta.0",
		"@smui/checkbox": "^7.0.0-beta.0",
		"@smui/form-field": "^7.0.0-beta.0",
		"@smui/icon-button": "^7.0.0-beta.0",
		"@smui/layout-grid": "^7.0.0-beta.0",
		"@smui/list": "^7.0.0-beta.0",
		"@smui/menu": "^7.0.0-beta.0",
		"@smui/paper": "^7.0.0-beta.0",
		"@smui/top-app-bar": "^7.0.0-beta.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.8.5",
		"@types/gapi": "^0.0.44",
		"@types/gapi.client.admin-directory_v1": "^0.0.1",
		"@types/google-one-tap": "^1.2.2",
		"@types/google.accounts": "^0.0.6",
		"@types/gsi": "^0.0.0",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"jwt-decode": "^3.1.2",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"smui-theme": "^7.0.0-beta.0",
		"svelte": "^3.55.1",
		"svelte-adapter-appengine": "^0.10.1",
		"svelte-check": "^3.0.4",
		"svelte-local-storage-store": "^0.4.0",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vitest": "^0.29.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Pluto-Open-Source-Team/Pluto-Policy-Manager.git"
	},
	"author": "Pluto Open Source Team",
	"license": "SEE LICENSE IN LICENSE.md",
	"bugs": {
		"url": "https://github.com/Pluto-Open-Source-Team/Pluto-Policy-Manager/issues"
	},
	"homepage": "https://github.com/Pluto-Open-Source-Team/Pluto-Policy-Manager#readme",
	"type": "module"
}
