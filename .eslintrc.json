{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "ignorePatterns": ["dist", "node_modules", "webpack.*", "config/paths.js"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "globals": {
        "gapi": "readonly",
        "process": "readonly"
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "config/webpack.common.js"
            }
        }
    }
}
